{
  "manifest_version": 3,
  "name": "Claude to GitHub Gist",
  "version": "1.0",
  "description": "Create a GitHub gist from a Claude conversation",
  "permissions": [
    "storage",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://api.claude.ai/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"]
    }
  ]
}
