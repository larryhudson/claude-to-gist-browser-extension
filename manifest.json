{
  "manifest_version": 2,
  "name": "Claude to GitHub Gist",
  "version": "1.0",
  "description": "Create a GitHub gist from a Claude conversation",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "https://claude.ai/*",
    "https://api.github.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"]
    }
  ]
}
